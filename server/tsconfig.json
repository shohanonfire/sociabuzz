{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",            // ✅ এখানে NodeNext
    "moduleResolution": "NodeNext",  // ✅ match করতে হবে
    "outDir": "dist",
    "rootDir": "src",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": ["src"]
}
